<h1>Eat-da-burger!</h1>

<div class = "burgerList">
    <div class= "addedBurger">
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class = "devouredBurger">
        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burgerName" name="burger_name" style= "width:300px; height:50px;">
  </div>

  <button type="submit">Submit</button>
</form>

<h4>Enter a burger you want to eat then click "Submit" button</h4>